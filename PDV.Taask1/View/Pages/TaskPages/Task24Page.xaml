<Page x:Class="PDV.Taask1.View.Pages.TaskPages.Task24Page"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PDV.Taask1.View.Pages.TaskPages"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Task24Page">

    <Border>
        <Grid>
            <Image Source="/Images/24.jpg"
                   Stretch="UniformToFill"/>

            <Border HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    Width="200"
                    Height="200"
                    Margin="0,102,0,0"
                    CornerRadius="15"
                    Effect="{StaticResource MaterialDesignElevationShadow16}" Background="#FFFFDE00">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="0.3*" />
                        <RowDefinition Height="1*" />
                    </Grid.RowDefinitions>

                    <Image Source="/Images/task24.png"
                           Grid.Row="0"/>
                    <StackPanel Grid.Row="1"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="y = "
                                       Foreground="Black"
                                       VerticalAlignment="Center" FontSize="20"/>
                            <TextBox Width="30"
                                     x:Name="TbY"
                                     Foreground="Black" FontSize="20"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal"
                                    Margin="0 10 0 0">
                            <TextBlock Text="k = "
                                       VerticalAlignment="Center"
                                       Foreground="Black" FontSize="20"/>
                            <TextBox Width="30"
                                     x:Name="TbK"
                                     Foreground="Black" FontSize="20"/>
                        </StackPanel>

                        <Button Margin="0 10 0 0"
                                Background="Transparent"
                                x:Name="BtnTask24"
                                Click="BtnTask24_Click"
                                Foreground="Black" BorderBrush="Black" FontSize="20">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Check"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>
            <StackPanel HorizontalAlignment="Left"
                        VerticalAlignment="Top">
                <Button Background="#FFFFCB00"
                        Margin="720,10,0,0"
                        x:Name="BtnMainPage"
                        Click="BtnMainPage_Click"
                        Foreground="Black"
                        Content="Back"
                        ToolTip="Вернуться" BorderBrush="Black" FontSize="20"/>
            </StackPanel>
        </Grid>
    </Border>
</Page>
